<resources>

    <attr name="primaryColor" format="reference"/>
    <attr name="background" format="reference"/>
    <attr name="defaultTextColor" format="reference"/>
    <attr name="bottomNavColor" format="reference"/>
    <attr name="fragmentBackground" format="reference"/>
    <attr name="spinnerItemBackground" format="reference" />
    <attr name="upArrow" format="reference"/>
    <attr name="downArrow" format="reference"/>
    <attr name="emptyBook" format="reference"/>
    <attr name="emptyBookMipmap" format="reference"/>
    <attr name="emptyWand" format="reference"/>
    <attr name="emptyWandMipmap" format="reference"/>
    <attr name="emptyStar" format="reference"/>
    <attr name="emptyStarMipmap" format="reference"/>
    <attr name="filledStarBW" format="reference"/>
    <attr name="menuHeaderColor" format="reference"/>
    <attr name="upDownArrow" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">?attr/defaultTextColor</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="actionMenuTextColor">?attr/defaultTextColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:editTextColor">?attr/defaultTextColor</item>
        <item name="android:textColorHint">@android:color/secondary_text_light</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorPrimary">?attr/defaultTextColor</item>
        <item name="android:textColorSecondary">?attr/menuHeaderColor</item>
        <item name="android:textColorTertiary">?attr/defaultTextColor</item>
        <item name="android:titleTextColor">?attr/defaultTextColor</item>
        <item name="android:subtitleTextColor">?attr/defaultTextColor</item>
        <item name="android:actionMenuTextColor">?attr/defaultTextColor</item>
        <item name="android:navigationBarColor">?attr/defaultTextColor</item>
<!--        <item name="preferenceTheme">@style/PreferencesTheme</item>-->
<!--        <item name="preferenceCategoryStyle">@style/PreferencesTheme</item>-->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="fragmentBackground">?attr/background</item>
    </style>

    <style name="ParchmentAppTheme" parent="AppTheme">
        <item name="primaryColor">@color/darkBrown</item>
        <item name="background">@drawable/bookbackground_2</item>
        <item name="defaultTextColor">@color/black</item>
        <item name="bottomNavColor">@color/parchment_bottom_nav_color</item>
        <item name="upArrow">@drawable/up_arrow</item>
        <item name="downArrow">@drawable/down_arrow</item>
        <item name="upDownArrow">@drawable/up_down_arrow_icon</item>
        <item name="emptyBook">@drawable/book_empty</item>
        <item name="emptyStar">@drawable/star_empty</item>
        <item name="emptyWand">@drawable/wand_empty</item>
        <item name="emptyWandMipmap">@drawable/wand_empty</item>
        <item name="filledStarBW">@drawable/star_filled_grey</item>
        <item name="menuHeaderColor">@color/menuHeaderColor</item>
        <item name="spinnerItemBackground">@android:color/transparent</item>
    </style>

    <style name="DarkAppTheme" parent="AppTheme">
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
        <item name="primaryColor">@color/darkBrown</item>
        <item name="background">@color/darkGray</item>
        <item name="defaultTextColor">@color/white</item>
        <item name="bottomNavColor">@color/dark_bottom_nav_color</item>
        <item name="upArrow">@drawable/up_arrow_white</item>
        <item name="downArrow">@drawable/down_arrow_white</item>
        <item name="upDownArrow">@drawable/up_down_arrow_white</item>
        <item name="emptyBook">@drawable/book_empty_white</item>
        <item name="emptyStar">@drawable/star_empty_white</item>
        <item name="emptyWand">@drawable/wand_empty_white</item>
        <item name="filledStarBW">@drawable/star_filled_white</item>
        <item name="menuHeaderColor">@color/menuHeaderColorDark</item>
        <item name="spinnerItemBackground">@color/darkGray</item>
    </style>

    <style name="LightAppTheme" parent="AppTheme">
        <item name="primaryColor">@color/darkBrown</item>
        <item name="background">@color/lightBrown</item>
        <item name="defaultTextColor">@color/black</item>
        <item name="bottomNavColor">@color/light_bottom_nav_color</item>
        <item name="upArrow">@drawable/up_arrow</item>
        <item name="downArrow">@drawable/down_arrow</item>
        <item name="upDownArrow">@drawable/up_down_arrow_icon</item>
        <item name="emptyBook">@drawable/book_empty</item>
        <item name="emptyStar">@drawable/star_empty</item>
        <item name="emptyWand">@drawable/wand_empty</item>
        <item name="filledStarBW">@drawable/star_filled_grey</item>
        <item name="menuHeaderColor">@color/menuHeaderColor</item>
        <item name="spinnerItemBackground">@color/lightBrown</item>
    </style>

    <!-- Custom spinner theme
    <?xml version="1.0" encoding="utf-8"?>
    <resources>
        <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
            <item name="android:background">@android:drawable/edit_text</item>
        </style>
    </resources>
    -->

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">?attr/background</item>
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:titleTextColor">?attr/defaultTextColor</item>
        <item name="android:subtitleTextColor">?attr/defaultTextColor</item>
        <item name="android:textColorPrimary">?attr/defaultTextColor</item>
        <item name="android:textColorSecondary">?attr/defaultTextColor</item>
        <item name="android:textColorTertiary">?attr/defaultTextColor</item>
        <item name="android:textColorHighlight">?attr/defaultTextColor</item>

        <item name="android:textColorAlertDialogListItem">?attr/defaultTextColor</item>
        <item name="android:dialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="FilterBlockStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sort_filter_vertical_block_padding</item>
        <item name="android:paddingBottom">@dimen/sort_filter_vertical_block_padding</item>
        <item name="android:paddingLeft">@dimen/sort_filter_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/sort_filter_horizontal_padding</item>
    </style>

    <!-- Text fields in general -->
    <style name="GeneralTextStyle">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:alpha">0.8</item>
    </style>

    <!--
        NB: If we don't inherit from the base checkbox style
        then the checkbox doesn't appear at all, only the label
    -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/defaultTextColor</item>
        <item name="android:textColor">?attr/defaultTextColor</item>
    </style>

    <!-- Header titles in the sort/filter layout -->
    <style name="SortFilterTitleStyle" parent="GeneralTextStyle">
        <item name="android:textSize">@dimen/sort_filter_titles_text_size</item>
        <item name="android:fontFamily">@font/cloister_black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Text fields in the spell window -->
    <style name="SpellWindowText" parent="GeneralTextStyle">
        <item name="android:textSize">14sp</item>
<!--        <item name="android:textColor">@android:color/primary_text_dark</item>-->
    </style>

    <!-- Filter option titles -->
    <style name="FilterOptionTitle" parent="GeneralTextStyle">
        <item name="android:textSize">@dimen/filter_option_title_text_size</item>
    </style>

    <!-- Filter option descriptions -->
    <style name="FilterOptionDescription" parent="GeneralTextStyle">
        <item name="android:textSize">@dimen/filter_option_description_text_size</item>
    </style>

    <!-- Prompt fields in the spell window -->
    <style name="SpellWindowPrompt" parent="SpellWindowText">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Prompt fields in the spell list export dialog -->
    <style name="SpellListExportPrompt" parent="GeneralTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <!-- Text fields in the spell creation window -->
    <style name="SpellCreationText" parent="GeneralTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Prompts in the spell creation layout -->
    <style name="SpellCreationPrompt" parent="SpellCreationText">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text fields in the source creation window -->
    <style name="SourceCreationText" parent="GeneralTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Prompts in the source creation layout -->
    <style name="SourceCreationPrompt" parent="SourceCreationText">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditTexts for number entry -->
    <style name="NumberEditText">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:digits">0123456789</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">@dimen/range_input_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Caster table -->
    <style name="CasterTable">
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- Caster table cells -->
    <style name="CasterTableCell" parent="GeneralTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonNoCaps" parent="ButtonStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Alert dialogs -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
<!--        <item name="android:background">?attr/background</item>-->
<!--        <item name="android:textColor">?attr/defaultTextColor</item>-->
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:titleTextColor">?attr/defaultTextColor</item>-->
<!--        <item name="android:subtitleTextColor">?attr/defaultTextColor</item>-->
<!--        <item name="android:textColorPrimary">?attr/defaultTextColor</item>-->
<!--        <item name="android:textColorSecondary">?attr/defaultTextColor</item>-->
<!--        <item name="android:textColorTertiary">?attr/defaultTextColor</item>-->
<!--        <item name="android:textColorHighlight">?attr/defaultTextColor</item>-->
<!--        <item name="android:textColorAlertDialogListItem">?attr/defaultTextColor</item>-->
<!--        <item name="android:editTextColor">?attr/defaultTextColor</item>-->
    </style>

</resources>
