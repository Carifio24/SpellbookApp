<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookbackground_2"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:backgroundTint="@color/darkBrown"
            android:contentDescription="@string/fab_description"
            android:src="@drawable/ic_spell_slots"
            android:layout_margin="16dp" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:elevation="4dp"
                android:theme="@style/ToolbarTheme"
                app:popupTheme="@style/ToolbarTheme"
                />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/main_constraint_layout"
            android:layout_marginTop="?android:attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
            >

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/spell_table_container"
                android:name="dnd.jon.spellbook.SpellTableFragment"
                android:tag="SpellTableFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:id="@+id/tablet_horizontal_spacer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/spell_table_container"
                />

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/spell_window_container"
                android:name="dnd.jon.spellbook.SpellWindowFragment"
                android:tag="SpellWindowFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tablet_horizontal_spacer"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/sort_filter_container"
                android:name="dnd.jon.spellbook.SortFilterFragment"
                android:tag="SortFilterFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tablet_horizontal_spacer"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tablet_full_width_container"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/side_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@drawable/bookbackground_2"
        app:menu="@menu/side_menu"
        app:headerLayout="@layout/side_header" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/right_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@drawable/bookbackground_2"
        >
        <!--
        app:headerLayout="@layout/right_expander_header"
        app:menu="@layout/right_menu"
        -->

        <ExpandableListView
            android:id="@+id/nav_right_expandable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ExpandableListView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

</layout>