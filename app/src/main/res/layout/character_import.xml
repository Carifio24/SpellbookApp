<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/character_import"
    android:padding="0dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookbackground_2"
        android:id="@+id/character_import_background"
        android:layout_alignTop="@id/character_import_scroll"
        android:layout_alignBottom="@id/character_import_scroll"
        android:layout_alignStart="@id/character_import_scroll"
        android:layout_alignEnd="@id/character_import_scroll"
        android:scaleType="fitXY"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_import_scroll"
        >
    
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/character_import_internal_rl"
            android:padding="15dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/import_title"
                android:text="@string/import_character_title"
                android:fontFamily="@font/cloister_black"
                android:textSize="35sp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/import_message"
                android:text="@string/import_character_json"
                android:layout_below="@id/import_title"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/import_edit_text"
                android:layout_below="@id/import_message"
                android:inputType="textMultiLine"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/import_cancel_button"
                android:text="@string/cancel"
                android:layout_below="@id/import_edit_text"
                android:layout_toStartOf="@id/import_button"
                android:background="@android:color/transparent"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/import_button"
                android:text="@string/import_text"
                android:layout_below="@id/import_edit_text"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>