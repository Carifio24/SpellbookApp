<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/FilterBlockStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ritual_concentration_filter_block"
    android:orientation="vertical"
    android:gravity="center"
    >

    <dnd.jon.spellbook.SortFilterHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ritual_concentration_filter_header"
        android:foreground="?android:attr/selectableItemBackground"
        custom:title="@string/ritual_concentration_filter_title"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ritual_concentration_horizontal_scroll"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ritual_concentration_grid"
            android:layout_gravity="center"
            android:useDefaultMargins="true"
            android:rowCount="1"
            >
        </GridLayout>

    </HorizontalScrollView>

</LinearLayout>