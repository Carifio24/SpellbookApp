<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sort_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <dnd.jon.spellbook.SortFilterHeaderView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sort_header"
                app:layout_constraintTop_toTopOf="parent"
                custom:title="@string/sort_title"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sort_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/sort_header"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_field_1_prompt"
                    android:text="@string/sort_field_1_prompt"
                    android:textSize="@dimen/sort_prompt_text_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/sort_field_1_choice_row"
                    app:layout_constraintTop_toBottomOf="@id/sort_field_1_prompt"
                    >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sort_field_1_spinner"
                        android:background="@android:color/transparent"
                        />

                    <dnd.jon.spellbook.SortDirectionButton
                        android:id="@+id/sort_field_1_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:scaleType="center"
                        android:src="@drawable/down_arrow"
                        android:tag="@integer/sort_arrow_1_tag"
                        android:layout_toEndOf="@id/sort_field_1_spinner"
                        android:layout_centerVertical="true"
                        app:layout_constraintWidth_percent="0.05" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sort_field_2_prompt"
                    android:text="@string/sort_field_2_prompt"
                    android:textSize="@dimen/sort_prompt_text_size"
                    app:layout_constraintTop_toBottomOf="@id/sort_field_1_choice_row"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/sort_field_2_choice_row"
                    app:layout_constraintTop_toBottomOf="@id/sort_field_2_prompt"
                    >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sort_field_2_spinner"
                        android:background="@android:color/transparent"
                        />

                    <dnd.jon.spellbook.SortDirectionButton
                        android:id="@+id/sort_field_2_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:scaleType="center"
                        android:src="@drawable/down_arrow"
                        android:tag="@integer/sort_arrow_2_tag"
                        android:layout_toEndOf="@id/sort_field_2_spinner"
                        android:layout_centerVertical="true"
                        app:layout_constraintWidth_percent="0.05" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sourcebook_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/sort_block"
            />

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caster_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/sourcebook_filter_block"
            />

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/school_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/caster_filter_block"
            />

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/casting_time_type_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/school_filter_block"
            />

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/duration_type_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/casting_time_type_filter_block"
            />

        <include layout="@layout/filter_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/range_type_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/duration_type_filter_block"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ranges_filter_block"
            android:paddingTop="@dimen/sort_filter_vertical_block_padding"
            android:paddingBottom="@dimen/sort_filter_vertical_block_padding"
            android:paddingStart="@dimen/sort_filter_horizontal_padding"
            android:paddingEnd="@dimen/sort_filter_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/range_type_filter_block"
            >

            <dnd.jon.spellbook.SortFilterHeaderView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ranges_filter_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                custom:title="@string/ranges_filter_title"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ranges_filter_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/ranges_filter_header"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="10dp"
                        android:id="@+id/min_level_entry"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="25sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/level_range_text_view"
                        android:text="@string/level_range_text"
                        android:textSize="25sp"
                        android:layout_toEndOf="@id/min_level_entry"
                        android:layout_centerVertical="true"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="10dp"
                        android:id="@+id/max_level_entry"
                        android:layout_toEndOf="@id/level_range_text_view"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:text="9"
                        android:maxLength="1"
                        android:inputType="number"
                        android:textSize="25sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>