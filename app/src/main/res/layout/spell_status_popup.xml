<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:padding="1dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yes_no_background"
        android:background="@android:color/transparent"
        android:src="@drawable/bookbackground_2"
        android:layout_alignTop="@id/spell_status_internal_rl"
        android:layout_alignBottom="@id/spell_status_internal_rl"
        android:layout_alignLeft="@id/spell_status_internal_rl"
        android:layout_alignRight="@id/spell_status_internal_rl"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spell_status_internal_rl"
        android:padding="5dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_popup_favorite"
            android:layout_alignParentStart="true"
            android:src="@mipmap/star_empty"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_popup_prepared"
            android:layout_toEndOf="@id/status_popup_favorite"
            android:src="@mipmap/wand_empty"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_popup_known"
            android:layout_toEndOf="@id/status_popup_prepared"
            android:src="@mipmap/book_empty"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

</RelativeLayout>