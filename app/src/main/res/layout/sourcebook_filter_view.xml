<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="sourcebook"
            type="dnd.jon.spellbook.Sourcebook" />
        <variable
            name="profile"
            type="dnd.jon.spellbook.CharacterProfile" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sourcebook_filter_rl"
        >

        <dnd.jon.spellbook.ToggleButton
            android:layout_width="@dimen/filter_star_images_size"
            android:layout_height="@dimen/filter_star_images_size"
            android:id="@+id/sourcebook_button"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:set="@{profile.getSourcebookFilter(sourcebook)}"
            custom:resourceTrue="@drawable/star_icon_filled"
            custom:resourceFalse="@drawable/star_icon_empty"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/xge_label"
            android:layout_toEndOf="@id/sourcebook_button"
            android:text="@{sourcebook.displayName}"
            android:textAlignment="center"
            android:singleLine="false"
            android:textSize="18sp"
            android:paddingStart="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/sourcebook_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>