<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/background"
        android:id="@+id/yes_no_background"
        android:layout_alignTop="@id/yes_no_internal_rl"
        android:layout_alignBottom="@id/yes_no_internal_rl"
        android:layout_alignStart="@id/yes_no_internal_rl"
        android:layout_alignEnd="@id/yes_no_internal_rl"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yes_no_internal_rl"
        android:padding="8dp"
        >

        <TextView
            style="@style/GeneralTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes_no_title"
            android:fontFamily="@font/cloister_black"
            android:textSize="45sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            style="@style/GeneralTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes_no_message"
            android:layout_below="@id/yes_no_title"
            android:layout_centerHorizontal="true"
            />

        <Button
            style="@style/GeneralTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yes_no_message"
            android:layout_toStartOf="@id/no_button"
            android:background="@android:color/transparent"
            android:id="@+id/yes_button"
            android:text="@string/yes"
            />

        <Button
            style="@style/GeneralTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yes_no_message"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:id="@+id/no_button"
            android:text="@string/no"
        />

    </RelativeLayout>


</RelativeLayout>