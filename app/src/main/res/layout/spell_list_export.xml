<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookbackground_2"
        android:id="@+id/spell_list_export_background"
        android:layout_alignTop="@id/spell_list_export_ll"
        android:layout_alignBottom="@id/spell_list_export_ll"
        android:layout_alignStart="@id/spell_list_export_ll"
        android:layout_alignEnd="@id/spell_list_export_ll"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/spell_list_export_ll"
        android:padding="5dp"
        >


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/GeneralTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/export_spell_list"
            android:textSize="@dimen/export_spell_list_title_size"
            android:fontFamily="@font/cloister_black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/SpellListExportPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/export_list"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/SpellListExportPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_list_format"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/export_list_format"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/SpellListExportPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_spell_info"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/export_list_expanded"
                android:checked="true"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/export_cancel_button"
                android:text="@string/cancel"
                android:background="@android:color/transparent"
                android:foreground="?android:selectableItemBackground"
                android:layout_toStartOf="@id/export_list_button"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/export_list_button"
                android:text="@string/export"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>