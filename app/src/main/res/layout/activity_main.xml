<?xml version="1.0" encoding="utf-8"?>


    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinator_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:theme="@style/ToolbarStyle"
            app:popupTheme="@style/ToolbarStyle"
            app:layout_scrollFlags="scroll|enterAlways"
            />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bookbackground_2"
        android:layout_below="@id/app_bar_layout"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:id="@+id/main_constraint_layout"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/sort_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/sort_view_height"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="@dimen/sort_view_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


            <android.support.constraint.ConstraintLayout
                android:id="@+id/sort_widgets_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <Spinner
                    android:id="@+id/sort_spinner_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <dnd.jon.spellbook.SortDirectionButton
                    android:id="@+id/sort_arrow_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/down_arrow"
                    android:tag="@integer/sort_arrow_1_tag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sort_spinner_1"
                    app:layout_constraintWidth_percent="0.05" />

                <Spinner
                    android:id="@+id/sort_spinner_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toEndOf="@id/sort_arrow_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <dnd.jon.spellbook.SortDirectionButton
                    android:id="@+id/sort_arrow_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/down_arrow"
                    android:tag="@integer/sort_arrow_2_tag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sort_spinner_2"
                    app:layout_constraintWidth_percent="0.05" />

                <Spinner
                    android:id="@+id/class_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toEndOf="@id/sort_arrow_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.3" />

                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/search_button_padding"
                    android:scaleType="fitXY"
                    android:src="@drawable/search_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_max="@dimen/sort_view_height"
                    app:layout_constraintWidth_max="@dimen/sort_view_height"
                    app:layout_constraintWidth_percent="0.1" />

                <ImageButton
                    android:id="@+id/clear_search_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/clear_button_padding"
                    android:scaleType="fitXY"
                    android:src="@drawable/x_icon"
                    android:visibility="gone"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintEnd_toStartOf="@id/search_button"
                    app:layout_constraintHeight_max="@dimen/sort_view_height"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_max="@dimen/sort_view_height"
                    app:layout_constraintWidth_percent="0.1" />

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search"
                    android:autofillHints="@string/search"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:textSize="@dimen/sort_header_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/clear_search_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spell_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sort_view"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/side_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@drawable/bookbackground_2"
        app:menu="@layout/side_menu"
        app:headerLayout="@layout/side_header" />

    <android.support.design.widget.NavigationView
        android:id="@+id/right_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@drawable/bookbackground_2"
        >
        <!--
        app:headerLayout="@layout/right_expander_header"
        app:menu="@layout/right_menu"
        -->

        <ExpandableListView
            android:id="@+id/nav_right_expandable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ExpandableListView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

</android.support.design.widget.CoordinatorLayout>